    "@testing-library/user-event": "14.5.1",
    "@types/jest": "29.5.8",
    "@types/react": "18.2.37",
    "jest": "29.7.0",
    "jsdom": "22.1.0",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  },
  "packageManager": "yarn@3.6.0",
  "repository": "https://github.com/TommyPersson/mediator-js"
